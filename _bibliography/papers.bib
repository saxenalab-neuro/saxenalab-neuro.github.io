@article {Yi2022.09.01.506091,
	author = {Daiyao Yi and Simon Musall and Anne Churchland and Nancy Padilla-Coreano and Shreya Saxena},
	title = {Disentangled multi-subject and social behavioral representations through a constrained subspace variational autoencoder (CS-VAE)},
	elocation-id = {2022.09.01.506091},
