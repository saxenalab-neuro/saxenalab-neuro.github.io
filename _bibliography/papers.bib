title = {Motor cortex activity across movement speeds is predicted by network-level strategies for generating muscle activity},
author = {Saxena, Shreya and Russo, Abigail A and Cunningham, John and Churchland, Mark M},
editor = {Pruszynski, J Andrew and Gold, Joshua I},
volume = 11,
year = 2022,
